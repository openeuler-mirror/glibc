index 4614acea..1591031d 100644
--- a/elf/Versions
+++ b/elf/Versions
@@ -77,6 +77,7 @@ ld {
     _dl_signal_error;
 
     # Set value of a tunable.
+    __tunable_is_initialized;
     __tunable_get_val;
   }
 }
